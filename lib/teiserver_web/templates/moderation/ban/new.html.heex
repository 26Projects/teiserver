<% bsname = view_colour() %>

<%= render TeiserverWeb.Moderation.GeneralView, "sub_menu.html", Map.merge(assigns, %{active: "bans"}) %>

<div class="row section-menu">
  <div class="col-md-12">
    <div class={"card border-#{bsname}"}>
      <div class="card-body">
        <%= render TeiserverWeb.Moderation.BanView, "section_menu.html", Map.merge(assigns, %{
          basic_search: "",
          show_search: false,
          active: "new"
        })
        %>

        <hr />

<%= render "form.html", Map.put(assigns, :action, Routes.moderation_ban_path(@conn, :create)) %>

      </div>
    </div>
  </div>
</div>
