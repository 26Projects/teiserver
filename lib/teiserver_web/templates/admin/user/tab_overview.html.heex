<style type="text/css">
  .role-badge {
    width: 140px;
    display: inline-block;
    text-align: center;
    font-size: 1.5em;
  }
</style>

<div class="page-row row">
  <div class="col-md-12 col-lg-4">
    <h4>Status</h4><br />
    <%= for {name, colour, icon} <- @roles do %>
      <div class="role-badge">
        <i class={"fa-fw fa-2x #{icon}"} style={"color: #{colour}"} title={name}></i>
        <br />
        <%= name %>
      </div>
    <% end %>
  </div>

  <div class="col-md-12 col-lg-8">
    <h4>Restrictions</h4>
    <div class="row">
      <%= for {section, r_list} <- @restrictions_lists do %>
        <div class="col-lg-3 col-xl-2 col-xxl-2">
          <strong><%= section %></strong>
          <%= for r <- r_list do %>
            <% r_clean = String.replace(r, " ", "_") %>
            <%= central_component "checkbox",
              id: "to_restriction_#{r_clean}",
              name: "_",
              label: r,
              checked: Enum.member?(@user.data["restrictions"] || [], r)
            %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-12">
    <h4>Profile/history</h4>
  </div>

  <%=
    central_component "menu_card",
    icon: Central.Communication.ChatRoomLib.icon(),
